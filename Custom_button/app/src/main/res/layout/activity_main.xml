<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button1"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/custom_button"
        android:fontFamily="sans-serif-light"
        android:onClick="addOne"
        android:text="1"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="60dp"
        app:layout_constraintBottom_toTopOf="@id/button4"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView" />

    <Button
        android:id="@+id/button2"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/custom_button"
        android:fontFamily="sans-serif-light"
        android:text="2"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="60dp"
        android:onClick="addTwo"
        app:layout_constraintBottom_toTopOf="@id/button5"
        app:layout_constraintEnd_toStartOf="@id/button3"
        app:layout_constraintStart_toEndOf="@id/button1"
        app:layout_constraintTop_toBottomOf="@id/textView"
        />

    <Button
        android:id="@+id/button3"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/custom_button"
        android:fontFamily="sans-serif-light"
        android:text="3"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="60dp"
        android:onClick="addThree"
        app:layout_constraintStart_toEndOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button6"
        app:layout_constraintTop_toBottomOf="@id/textView"
        />

    <Button
        android:id="@+id/button4"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/custom_button"
        android:fontFamily="sans-serif-light"
        android:text="4"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="60dp"
        android:onClick="addFour"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button1"
        app:layout_constraintBottom_toTopOf="@id/button7"
        />

    <Button
        android:id="@+id/button5"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/custom_button"
        android:fontFamily="sans-serif-light"
        android:text="5"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="60dp"
        android:onClick="addFive"
        app:layout_constraintEnd_toStartOf="@id/button6"
        app:layout_constraintStart_toEndOf="@id/button4"
        app:layout_constraintTop_toBottomOf="@id/button2"
        app:layout_constraintBottom_toTopOf="@id/button8"
         />

    <Button
        android:id="@+id/button6"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/custom_button"
        android:fontFamily="sans-serif-light"
        android:text="6"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="60dp"
        android:onClick="addSix"
        app:layout_constraintStart_toEndOf="@+id/button5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button9"
        app:layout_constraintTop_toBottomOf="@id/button3"
        />

    <Button
        android:id="@+id/button7"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/custom_button"
        android:fontFamily="sans-serif-light"
        android:text="7"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="60dp"
        android:onClick="addSeven"
        app:layout_constraintEnd_toStartOf="@+id/button8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button4"
        app:layout_constraintBottom_toTopOf="@id/buttonAst"
        />

    <Button
        android:id="@+id/button8"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/custom_button"
        android:fontFamily="sans-serif-light"
        android:text="8"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="60dp"
        android:onClick="addEight"
        app:layout_constraintEnd_toStartOf="@id/button9"
        app:layout_constraintStart_toEndOf="@id/button7"
        app:layout_constraintTop_toBottomOf="@id/button5"
        app:layout_constraintBottom_toTopOf="@id/button0"
        />

    <Button
        android:id="@+id/button9"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/custom_button"
        android:fontFamily="sans-serif-light"
        android:text="9"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="60dp"
        android:onClick="addNine"
        app:layout_constraintStart_toEndOf="@+id/button8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonCanc"
        app:layout_constraintTop_toBottomOf="@id/button6"
        />

    <Button
        android:id="@+id/button0"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/custom_button"
        android:fontFamily="sans-serif-light"
        android:onClick="addZero"
        android:text="0\n+"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@id/buttonCall"
        app:layout_constraintEnd_toStartOf="@id/buttonCanc"
        app:layout_constraintStart_toEndOf="@id/buttonAst"
        app:layout_constraintTop_toBottomOf="@id/button8" />

    <Button
        android:id="@+id/buttonAst"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/custom_button"
        android:fontFamily="sans-serif-light"
        android:text="*"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="60dp"
        android:onClick="addAst"
        app:layout_constraintEnd_toStartOf="@+id/button0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button7"
        app:layout_constraintBottom_toTopOf="@id/buttonCall"
        />

    <Button
        android:id="@+id/buttonCanc"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/custom_button"
        android:fontFamily="sans-serif-light"
        android:text="#"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="60dp"
        android:onClick="addCanc"
        app:layout_constraintStart_toEndOf="@+id/button0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button9"
        app:layout_constraintBottom_toTopOf="@id/buttonCall"
        />

    <ImageButton
        android:id="@+id/buttonCall"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button0"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/callbutton"
        android:background="@color/black"
        android:scaleType="fitCenter"/>

    <ImageButton
        android:id="@+id/buttonUndo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/black"
        android:scaleType="fitCenter"
        android:onClick="undo"
        android:src="@drawable/undobutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/buttonEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:background="@color/black"
        android:onClick="editDial"
        app:srcCompat="@android:drawable/ic_menu_edit"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        android:background="@android:drawable/arrow_down_float"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>